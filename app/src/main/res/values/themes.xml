<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Matrix" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primary</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AddProductFormStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/primary</item>
        <item name="boxBackgroundColor">@color/textViewBg</item>
        <item name="boxStrokeColor">@color/textViewBg</item>
        <item name="boxStrokeErrorColor">@color/errorColor</item>
        <item name="prefixTextColor">@color/primary</item>

    </style>



    <style name="BrandedSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorSwitchThumbNormal">@color/unfocused</item>

    </style>
    <style name="Theme.Matrix" parent="Base.Theme.Matrix" />

    <color name="errorColor">#FF1100</color>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="FilledBoxEndIconTint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/primary</item>
        <item name="boxStrokeColor">@color/box_stroke_color_selector</item>
        <item name="boxStrokeErrorColor">@color/errorColor</item>


    </style>
</resources>